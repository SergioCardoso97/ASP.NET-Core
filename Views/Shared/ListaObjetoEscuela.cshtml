@* @model List<ObjetoEscuelaBase> *@
@{
    var index = 0;
}
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Num</th>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) 
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@obj.Id</td>
                <td>@obj.Nombre</td>
            </tr>
        }
    </tbody>
</table>