@model List<Asignatura>
@{
    ViewData["Title"] = "Lista de todas las Asignaturas";
    Layout = "simple";
    var index = 0;
}

<h1>@ViewData["Title"]</h1>
@* <partial name="ListaObjetoEscuela"></partial> *@
<div class="d-flex justify-content-end mb-5 mr-2">
    @Html.ActionLink("Agregar", "Create", "Asignatura", null, new {@class = "btn btn-success"})
</div>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th class="text-center" scope="col">Num</th>
            <th class="text-center" scope="col">Nombre</th>
            <th class="text-center" scope="col">Curso</th>
            <th class="text-center" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td class="text-center">@i</td>
                <td class="text-center">@Model[i].Nombre</td>
                <td class="text-center">
                   @Html.ActionLink("Ver Curso", "Index", "Curso", new { id = @Model[i].CursoId }, new {@class = "btn btn-secondary mr-3"})
                </td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Update", "Asignatura", new { id = @Model[i].Id }, new {@class = "btn btn-primary mr-3"})
                    @Html.ActionLink("Eliminar", "Delete", "Asignatura", new { id = @Model[i].Id}, new {@class = "btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
<p><i>@ViewData["Fecha"]</i></p>
