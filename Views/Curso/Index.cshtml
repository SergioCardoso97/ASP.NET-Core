@model Curso
@{
    ViewData["Title"] = "Informacion de un Curso";
    Layout = "simple";
}

<h1>@ViewData["Title"]</h1>
<div class="d-flex justify-content-center">
    <div>
        <div class="d-flex flex-column justify-content-center m-2">
            <h2 >Nombre: @Model.Nombre</h2>
        </div>
        <div class="d-flex flex-column justify-content-center m-2">
            <h2>Dirección: @Model.Dirección</h2>
        </div>
        <div class="d-flex flex-column justify-content-center m-2">
            <h2>Jornada: @Model.Jornada</h2>
        </div>
        <div class="d-flex justify-content-center m-5">
            @Html.ActionLink("Editar Curso", "Update", "Curso", new {id = @Model.Id}, new {@class = "btn btn-primary btn-lg mr-5"})
            @Html.ActionLink("Regresar", "Multicurso", "Curso", null, new {@class = "btn btn-secondary btn-lg"})            
        </div>
    </div>
</div>
<p><i>@ViewData["Fecha"]</i></p>
